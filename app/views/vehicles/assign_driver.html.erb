<h1>Assigned History</h1>

<div class="table-responsive">
  <table class="table" cellspacing="10">
    <thead>
      <tr>
        <th>Make</th>
        <th>Model</th>
        <th>Variant</th>
        <th>Year</th>
        <th>Veh class</th>
        <th>Capacity</th>
        <th>Vahicle number</th>
        <th>Assigned Driver</th>
      </tr>
    </thead>

    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <% d_count = vehicle.drivers.count %>
          <% if d_count != 0 %>
            <td><%= vehicle.make %></td>
            <td><%= vehicle.model %></td>
            <td><%= vehicle.variant %></td>
            <td><%= vehicle.year %></td>
            <td><%= vehicle.veh_class %></td>
            <td><%= vehicle.capacity %></td>
            <td><%= vehicle.vahicle_number %></td>
            <td><%= vehicle.drivers.last.name rescue nil %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>